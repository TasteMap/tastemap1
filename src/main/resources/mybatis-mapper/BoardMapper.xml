<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.daedong.tastemap.board.BoardMapper">
    <sql id="list">
        SELECT A.rsnm, A.iboard
             ,(SELECT count(iboard, iuser) from t_matzip_fav where iboard=#{iboard} and iuser = #{iuser}) as isFav
        FROM t_matzip A
    </sql>

    <select id="selBoardRsad" resultType="BoardDomain">
        <include refid="list"/>
        where A.rsad = #{rsad}
    </select>

    <select id="selBoardRsc" resultType="BoardDomain">
        <include refid="list"/>
        WHERE A.rsc = #{rsc}
    </select>

    <select id="selBoard" resultType="BoardEntity">
        SELECT * (SELECT COUNT(*) FROM t_matzip_fav WHERE iboard = #{iboard}) as favCnt FROM t_mapzip WHERE iboard = #{iboard}
        FROM t_matzip A
        WHERE iboard = ${iboard}
        <!--DB : t_matzip, t_matzip_fav, t_user, t_matzip_cmt, t_matzip_rev-->
    </select>
